    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inder"
        android:gravity="top"
        android:text="@string/a_pair_"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
<!--        app:layout_constraintTop_toBottomOf="@id/item_img" />-->

    <TextView
        android:id="@+id/item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inder"
        android:text="Size:"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/item_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inder"
        android:text="Length:"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_size"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/size_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:background="@drawable/rectangle_text"
        android:gravity="center"
        android:text="12"
        app:layout_constraintStart_toEndOf="@id/item_size"
        app:layout_constraintTop_toTopOf="@id/item_size"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/length_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_text"
        android:gravity="center"
        android:text="46cm"
        app:layout_constraintStart_toStartOf="@id/size_value"
        app:layout_constraintTop_toTopOf="@id/item_length"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/apply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Apply"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_length"
        tools:ignore="HardcodedText" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="View Details"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apply_button"
        tools:ignore="HardcodedText" />
